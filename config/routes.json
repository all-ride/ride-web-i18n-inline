{
    "routes": [
        {
            "path": "api/v1/i18n/translation/%key%",
            "controller": "ride\\web\\api\\controller\\I18nApiController",
            "action": "getTranslation",
            "id": "api.i18n.translation.get",
            "methods": ["get"]
        },
        {
            "path": "api/v1/i18n/translation/%locale%/%key%",
            "controller": "ride\\web\\api\\controller\\I18nApiController",
            "action": "postTranslation",
            "id": "api.i18n.translation.post",
            "methods": ["post"]
        },
        {
            "path": "api/v1/i18n/translator/toggle",
            "controller": "ride\\web\\api\\controller\\I18nApiController",
            "action": "toggleTranslator",
            "id": "api.i18n.translator.toggle",
            "methods": ["get"]
        }
    ]
}
